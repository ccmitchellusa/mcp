IBMCLOUD_API_KEY=YOUR_API_KEY
IBMCLOUD_REGION=us-south
IBMCLOUD_RESOURCE_GROUP=default

# Option 1: Use a predefined configuration profile
# Available profiles can be listed with: make list-configs
# Examples: vpc-instance, ks, code_engine_apps, all-tools
CONFIG_PROFILE=

# Option 2: Specify tools directly (used if CONFIG_PROFILE not set)
IBMCLOUD_MCP_TOOLS=

# Transport mode: stdio or sse
# defaults to stdio if not set
IBMCLOUD_MCP_TRANSPORT=stdio